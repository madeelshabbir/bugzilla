<!DOCTYPE html>
<html>
  <head>
    <title>Bugzilla</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-inverse'>
      <div class='container-fluid'>
        <div class='navbar-header'>
          <%= link_to 'Bugzilla', root_path %>
        </div>
        <ul class='nav navbar-nav navbar-right'>
          <li><%= link_to 'Signup', new_user_registration_path, class: 'glyphicon glyphicon-user' unless user_signed_in? %></li>
          <li><%= link_to 'Login', new_user_session_path, class: 'glyphicon glyphicon-log-in' unless user_signed_in? %></li>
          <li><a><%= current_user.name if user_signed_in? %></a></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' if user_signed_in? %></li>
        </ul>
      </div>
    </nav>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
