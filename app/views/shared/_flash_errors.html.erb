<% flash.each do |name, msg| %>
  <% if msg.class == Array %>
    <% msg.each do |message| %>
      <%= content_tag :div, message, id: "flash_#{name}", class: 'error-message' %>
    <% end %>
  <% else %>
    <%= content_tag :div, msg, id: "flash_#{name}", class: 'error-message' %>
  <% end %>
<% end %>
