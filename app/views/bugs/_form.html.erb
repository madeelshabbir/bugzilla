<%= form_with model: @bug, local: true do |form| %>
  <% if !@bug.nil? %>
    <ul>
    <% @bug.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>

  <div>
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot %>
  </div>

  <div>
    <%= form.label :type %>
    <%= form.select(:type) do %>
      <% Bug.types.each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select(:status) do %>
      <% Bug.statuses.each do |c| -%>
        <%= content_tag(:option, c.first == '_new' ? 'new' : c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
