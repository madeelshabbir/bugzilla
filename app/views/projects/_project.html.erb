<div class='panel-group'>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 class='panel-title row'>
        <a data-toggle='collapse' href='#collapse<%= project.id %>' class='col-xs-8' ><%= project.title %></a>
        <%= link_to 'View Details', project_path(project.id), class: 'col-xs-4 text-right text-primary' %>
      </h4>
    </div>

    <div id='collapse<%= project.id %>' class='panel-collapse collapse'>
      <ul class='list-group'>
        <% project.bugs.each do |bug| %>
          <li class='list-group-item'><%= link_to bug.title, project_bug_path(bug.project_id, bug.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
