<div class="row">
  <div class="col-xs-10">
    <h2><strong><%= @project.title %></strong></h2>
    <p><strong>Created by: </strong><%= @creater.name %></p>
    <span><%= link_to 'Edit', edit_project_path(@project.id), method: :get if @creater.id == current_user.id %></span>
    <span><%= link_to 'Delete', project_path(@project.id), method: :delete, data: { confirm: 'Are you sure?' } if @creater.id == current_user.id %></span>
  </div>
  <div class="col-xs-2">
    <%= form_with url: project_add_member_path(@project.id) do |f| %>
      <div class="form-group">
        <%= f.label :add_members %>
        <%= f.select :member, options_for_select(User.left_outer_joins(:developments).where('user_type <> 1 AND (developments.project_id <> ? OR developments.project_id IS NULL)', @project.id).map { |user| [user.name, user.id] }), {prompt: "Select Developer/QA..."} %>
      </div>

      <div>
        <% if @creater.id == current_user.id %>
          <%= f.submit :Add, class: 'btn btn-primary' %>
        <% else %>
          <%= f.submit :Add, class: 'btn btn-primary', disabled: true %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'users/index', locals: {users: @project.users } %>
